{
  "name": "polycode",
  "displayName": "polycode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polycode.openPanel",
        "title": "Open Polycode Panel",
        "category": "Polycode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "polycode",
          "title": "Polycode",
          "icon": "media/polycode.svg"
        }
      ]
    },
    "views": {
      "polycode": [
        {
          "id": "polycode.view",
          "name": "Polycode Home",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "polycode.openPanel",
          "when": "view == polycode.view",
          "group": "navigation@1"
        },
        {
          "command": "polycode.setSidebarSize",
          "when": "view == polycode.view",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "esbuild media-src/main.tsx --bundle --format=esm --target=es2020 --outfile=media/dist/main.js",
    "watch:webview": "esbuild media-src/main.tsx --bundle --format=esm --target=es2020 --outfile=media/dist/main.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.23.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "b4a": "^1.7.3",
    "bogon": "^1.1.0",
    "hyperdht": "^6.23.1",
    "hyperswarm": "^4.14.0",
    "hyperswarm-proxy-ws": "^1.2.0",
    "hyperswarm-web": "^2.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
