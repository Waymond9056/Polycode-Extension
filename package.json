{
  "name": "polycode",
  "displayName": "polycode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:polycode.view",
    "onCommand:polycode.openPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polycode.helloWorld",
        "title": "Hello World",
        "category": "Polycode"
      },
      {
        "command": "polycode.openPanel",
        "title": "Open Polycode Panel",
        "category": "Polycode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "polycode",
          "title": "Polycode",
          "icon": "media/polycode.svg"
        }
      ]
    },
    "views": {
      "polycode": [
        {
          "id": "polycode.view",
          "name": "Polycode Home",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "polycode.openPanel",
          "when": "view == polycode.view",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
